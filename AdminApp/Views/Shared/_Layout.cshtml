<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/css/utility.css" />
    <link rel="stylesheet" href="~/css/styles.css"/>
    <script src="https://kit.fontawesome.com/a7fb1c09d6.js" crossorigin="anonymous"></script>
    <title>@ViewData["Title"] - Westcoast Education</title>

</head>
<body>
<header>
    <nav class="navbar">
        <h3 class="navbar-title">
            <i class="fas fa fa-user-graduate"></i>
            <a asp-area="" asp-controller="Home" asp-action="Index">Westcoast Education</a>
        </h3>
        
        <ul class="navbar-links">
            <li class="nav-link-main">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-link-main">
                <a asp-area="" asp-controller="Courses" asp-action="Courses">Manage Courses</a>
            </li>
            <li class="nav-link-main">
                <a asp-area="" asp-controller="Teachers" asp-action="Teachers">Manage Teachers</a>
            </li>
            <li class="nav-link-main">
                <a asp-area="" asp-controller="Students" asp-action="Students">Manage Students</a>
            </li>
        </ul>
    </nav>
</header>
<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>