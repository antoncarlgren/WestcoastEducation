@model List<AdminApp.ViewModels.Teachers.TeacherViewModel>

@{
    ViewBag.Title = "Teachers";
    Layout = "_Layout";
}

<article class="content-wrapper">
    <section class="items-wrapper">
        <h4 class="items-title">Teachers</h4>
        <table class="items-table">
            <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Email</td>
                <td>Phone Number</td>
                <td>Address</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                        
                    <td>
                        <a asp-controller="Teachers" asp-action="EditTeacher" asp-route-id="@teacher.AppUserId">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>                                    
                        <a asp-action="Details" asp-route-id="@teacher.Id">
                            @teacher.Name
                        </a>
                    </td>
                    <td>@teacher.Email</td>
                    <td>@teacher.PhoneNumber</td>
                    <td>@teacher.Address</td>
                    <td>
                        @using(Html.BeginForm("DeleteTeacher", "Teachers", new { id=teacher.AppUserId }, FormMethod.Post))
                        {
                            <button type="submit" class="btn-delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <partial name="_TeachersFooterPartial"/>
    </section>
</article>