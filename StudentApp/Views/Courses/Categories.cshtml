@model System.Collections.Generic.List<StudentApp.ViewModels.CategoryWithCoursesViewModel>?

@{
    ViewBag.Title = "Courses";
    Layout = "_Layout";
}

<article class="content-wrapper">
    <section class="courses-wrapper">
        @if (Model is not null)
        {
            foreach (var category in Model)
            {
                <div class="category-courses-card collapsible">
                    <h4 class="card-header">@category.CategoryName</h4>
                    <table class="course-category-table">
                        <thead>
                        <tr>
                            <td>Title</td>
                            <td>Number</td>
                            <td>Length</td>
                            <td></td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var course in category.Courses)
                        {
                            <tr>
                                <td>                                
                                    @Html.ActionLink(
                                    @course.Title!, 
                                    "Details", 
                                    new { CourseNo = course.CourseNo }, 
                                    new { @class = "course-link" })
                                </td>
                                <td>@course.CourseNo</td>
                                <td>@course.Length</td>
                                <td>

                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        }
    </section>
</article>